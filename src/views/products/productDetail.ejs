<!DOCTYPE html>
<html lang="en">

<!-- Incluimos el Head y le pasamos el título de la página y la hoja de estilo correspondiente -->
<%- include('../partials/head.ejs', {tituloPagina: "Anastassia Joyas - Detalle de Producto", hojaEstilo: "productDetail"}) %>

<body>
    
    <!-- Incluimos el Header -->
    <%- include('../partials/header.ejs') %>

    <main>

        <div>
            <p id="indice"> <a href="../../productos/">Productos</a> / <%= producto.category %> / <%= producto.name %></p>
        </div>

        <section id="seccionDetalleProducto">
            <div id="contenedorImagen"> 
                <img id="imagenProducto" src="/images/products/<%= producto.image %>" alt="<%= producto.name %>">
            </div>
            <div id="infoProducto"> 
                <h2 id="nombre"><%= producto.name %></h2>
                <h4 id="precio">$ <%= producto.precio %></h4>
                <p id="descripcion">Descripción</p>
                <p id="textoDescripcion"><%= producto.description %></p>
                <div id="contenedorBotones">
                    <a href="../../productos/editar/<%= producto.id %>" id="botonEditar">EDITAR PRODUCTO</a>
                    <form action="/productos/eliminar/<%= producto.id %>?_method=DELETE" method="post" id="formularioEliminar">
                        <button id="botonEliminar">ELIMINAR PRODUCTO</button>
                    </form>
                </div>
                <button id="botonComprar">COMPRAR</button>
            </div>
        </section>

        <h2 id="productosRelacionados">PRODUCTOS RELACIONADOS</h2>

        <section id="sliderProductos">
            
            <% productosRelacionados.forEach(productoRelacionado => { %>
                <article class="contenedorProducto">
                    <a href="../../productos/detalle/<%= productoRelacionado.id %>">
                        <img class="imagenProducto" src="/images/products/<%= productoRelacionado.image %>" alt="<%= productoRelacionado.name %>">
                    </a>
                    <div id="contenedorInfo">
                        <h3 class="nombreProducto"><%= productoRelacionado.name %></h3>
                        <div class="carritoProducto">
                            <a href="../../productos/detalle/<%= productoRelacionado.id %>"><i  class="fa-solid fa-cart-shopping" id="iconoCarrito"></i></a>
                        </div>
                        <div class="infoProducto">
                            <h5 class="precio">Precio</h5>
                            <h5 class="numeroPrecio">$ <%= productoRelacionado.precio %></h5>
                        </div>
                    </div>
                    
                </article>
            <% }) %>

        </section>

    </main>

    <!-- Incluimos el Footer -->
    <%- include('../partials/footer.ejs') %>
    
</body>
</html>