<!DOCTYPE html>
<html lang="en">

<!-- Incluimos el Head y le pasamos el título de la página y la hoja de estilo correspondiente -->
<%- include('./partials/head.ejs', {tituloPagina: "Anastassia Joyas", hojaEstilo: "index"}) %>

<body>

    <!-- Incluimos el Header -->
    <%- include('./partials/header.ejs') %>
    
    <main>

        <!-- Script Carrousel Colecciones -->
        <script>
            function imagen1(){
                document.getElementById('imagen1').style.display = 'block';
                document.getElementById('imagen2').style.display = 'none';
                document.getElementById('imagen3').style.display = 'none';
            }
            function imagen2(){
                document.getElementById('imagen1').style.display = 'none';
                document.getElementById('imagen2').style.display = 'block';
                document.getElementById('imagen3').style.display = 'none';
            }
            function imagen3(){
                document.getElementById('imagen1').style.display = 'none';
                document.getElementById('imagen2').style.display = 'none';
                document.getElementById('imagen3').style.display = 'block';
            }
        </script>

        <!-- Carrousel Colecciones -->
        <h2 class="titulos">COLECCIONES</h2>

        <section id="carrouselColecciones">
            
            <a href="productos/detalle/11"><img id="imagen1" src="images/products/anillos/Anillo Amalfi.webp" alt="Anillo Amalfi"></a>
            <a href="productos/detalle/12"><img id="imagen2" src="images/products/anillos/Anillo Paris.webp" alt="Argolla Plata Roma"></a>
            <a href="productos/detalle/10"><img id="imagen3" src="images/products/pulseras/Tokyo.webp" alt="Colgante Beijing"></a>
            <div id="botonesSelectores">
                <button id="botonCarrousel1" class="selectorCarrousel" onclick="imagen1()"></i></button>
                <button id="botonCarrousel2" class="selectorCarrousel" onclick="imagen2()"></i></button>
                <button id="botonCarrousel3" class="selectorCarrousel" onclick="imagen3()"></i></button>
            </div>
           
            
