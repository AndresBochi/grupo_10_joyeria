<header>
    <section id="headerFlex">
        <div id="divLogo">
            <a href="/"><img id="logo" src="/images/anastassia-logo.jpeg" alt="Anastassia"></a>    
        </div>
        <nav>
            <ul type="none" id="listaNav">
                <li><a href="/productos" class="enlacesHeader">PRODUCTOS</a></li>
                <li><a href="#" class="enlacesHeader">COLECCIONES</a></li>
                <li><a href="#" class="enlacesHeader">SALE</a></li>
            </ul>
        </nav>
        <div id="divIconos">
            <i class="fa-solid fa-magnifying-glass" id="lupa"></i>
            
            <% if (locals && locals.userLogged) { %>
                <a href="/usuarios/login"><img src="/images/users/<%= locals.userLogged.avatar %>" style="width: 38px; height: 34px; border: 1px solid #3A251E; border-radius: 50%;"></a> 
                
            <% }else{ %>
                <a href="/usuarios/login"><i class="fa-solid fa-user"></i></a>
            <%} %>   
            <a href="/productos/carrito"><i class="fa-solid fa-cart-shopping"></i></a>
            <a href="#"><i class="fas fa-bars"></i></a>
        </div>
    </section>
    <section id="seccionBusqueda">
        <a href="#"><i  class="fa-solid fa-magnifying-glass"></i></a>
        <input type="text" placeholder="Encontrá lo que buscás..." id="barraBusqueda">
    </section>
</header>